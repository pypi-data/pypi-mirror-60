{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "simple": {
      "format": "%(asctime)s - %(levelname)s - %(module)s - %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    }
  },

  "handlers": {
    "default_handler": {
      "class": "logging.handlers.RotatingFileHandler",
      "formatter": "simple",
      "filename": "dbman.log",
      "maxBytes": 10485760,
      "backupCount": 10,
      "encoding": "utf8"
    },
    "ci_handler": {
      "class": "logging.StreamHandler",
      "formatter": "simple"
    }
  },

  "loggers": {
    "dbman": {
      "level": "DEBUG",
      "handlers": ["default_handler"],
      "propagate": "yes"
    }
  }
}
