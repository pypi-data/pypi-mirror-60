<?xml version="1.0"?>
<registry xmlns:i18n="http://xml.zope.org/namespaces/i18n"
          i18n:domain="plone">

  <record name="plone.app.tiles">
    <value purge="false">
      <element remove="True">ploneconf2016.slidertile</element>
      <element remove="True">ploneconf2016.presentationtile</element>
      <element remove="True">ploneconf2017.keynoters</element>
    </value>
  </record>

  <!-- New Default actions for Custom Row Formats -->
  <record name="plone.app.mosaic.default_available_actions">
    <field type="plone.registry.field.List">
      <title>Default available actions</title>
      <value_type type="plone.registry.field.TextLine" />
    </field>
    <value purge="False">
      <element remove="True">grid-row-yellow</element>
      <element remove="True">grid-row-blue</element>
      <element remove="True">grid-row-tight-text</element>
      <element remove="True">grid-row-full-width</element>
      <element remove="True">grid-row-special</element>
    </value>
  </record>

  <!-- Custom Row Formats -->
  <records interface="plone.app.mosaic.interfaces.IFormat"
           prefix="plone.app.mosaic.formats.grid_row_yellow">
    <value key="name" remove="True">grid-row-yellow</value>
  </records>

  <records interface="plone.app.mosaic.interfaces.IFormat"
           prefix="plone.app.mosaic.formats.grid_row_blue">
    <value key="name" remove="True">grid-row-blue</value>
  </records>

  <records interface="plone.app.mosaic.interfaces.IFormat"
           prefix="plone.app.mosaic.formats.grid_row_tight-text">
    <value key="name" remove="True">grid-row-tight-text</value>
  </records>

  <records interface="plone.app.mosaic.interfaces.IFormat"
           prefix="plone.app.mosaic.formats.grid-row-full-width">
    <value key="name" remove="True">grid-row-full-width</value>
  </records>

  <records interface="plone.app.mosaic.interfaces.IFormat"
           prefix="plone.app.mosaic.formats.grid-row-special">
    <value key="name" remove="True">grid-row-special</value>
  </records>
  <!-- End Custom Row Formats -->

  <records prefix="plone.app.mosaic.app_tiles.ploneconf2016_slidertile"
           interface="plone.app.mosaic.interfaces.ITile">
    <value key="name" remove="True">ploneconf2016.slidertile</value>
  </records>

  <records prefix="plone.app.mosaic.app_tiles.ploneconf2016_presentationtile"
           interface="plone.app.mosaic.interfaces.ITile">
    <value key="name" remove="True">ploneconf2016.presentationtile</value>
  </records>

  <records prefix="plone.app.mosaic.app_tiles.ploneconf2017_keynoters"
           interface="plone.app.mosaic.interfaces.ITile">
    <value key="name" remove="True">ploneconf2017.keynoters</value>
  </records>
</registry>
