<?xml version="1.0"?>
<portlets
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="plone">
  <portlet
    addview="cciaapd.contenttypes.SchedaPortlet"
    title="Scheda Portlet"
    description="A portlet to add Moduli and Riferimenti"
    i18n:attributes="title title_recent_portlet;
                     description description_recent_portlet">
    <for interface="plone.app.portlets.interfaces.IColumn" />
    <for interface="plone.app.portlets.interfaces.IDashboard" />
  </portlet>
  <portlet
    addview="cciaapd.contenttypes.UfficioPortlet"
    title="Ufficio Portlet"
    description="A portlet to show on a Scheda its related office content"
    i18n:attributes="title title_recent_portlet;
                     description description_recent_portlet">
    <for interface="plone.app.portlets.interfaces.IColumn" />
    <for interface="plone.app.portlets.interfaces.IDashboard" />
  </portlet>
  <portlet
    addview="cciaapd.contenttypes.ArchivioPortlet"
    title="Archivio Portlet"
    description="A portlet to show on a Scheda its related archivio"
    i18n:attributes="title title_archivio_portlet;
                     description description_archivio_portlet">
    <for interface="plone.app.portlets.interfaces.IColumn" />
    <for interface="plone.app.portlets.interfaces.IDashboard" />
  </portlet>
</portlets>
