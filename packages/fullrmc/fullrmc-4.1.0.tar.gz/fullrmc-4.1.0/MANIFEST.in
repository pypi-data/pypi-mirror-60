# include this file, to ensure we can recreate source distributions
include MANIFEST.in
# exclude all logs
global-exclude *.log

# exclude all c cpp and compiled files
global-exclude *.c
global-exclude *.cpp
global-exclude *.so
global-exclude *.rmc

# exclude all other non necessary files 
global-exclude .project
global-exclude .pydevproject

# exclude all of the subversion metadata
global-exclude *.svn*
global-exclude .svn/*
global-exclude *.git*
global-exclude .git/*
global-exclude fullrmc/Examples/*.dat

# include all Example files
global-include fullrmc/Examples/*.py
global-include fullrmc/Examples/*/*.py
global-include fullrmc/Examples/*/*.exp
global-include fullrmc/Examples/*/*.pdb

# include all license files found
global-include fullrmc/*LICENSE.*

# include all readme files found
global-include fullrmc/*README.*
global-include fullrmc/*readme.*
global-exclude fullrmc/Examples/*/*.dat
global-exclude fullrmc/Examples/*/visualizeTrajectory.py
global-exclude fullrmc/Examples/*/plotFigures.py
global-exclude fullrmc/Examples/*/extractTrajectory.py
global-exclude fullrmc/Examples/*/exportTrajectoryFigures.py
global-exclude fullrmc/Examples/*/extractTrajectoryPDF.py
global-exclude fullrmc/Examples/*/restart.pdb
global-exclude MultiframeUtils.py*
