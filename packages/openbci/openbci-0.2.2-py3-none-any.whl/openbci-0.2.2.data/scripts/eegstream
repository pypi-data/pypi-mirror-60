#!python

import sys
import logging

if sys.argv[-1] == "systemd":
    from systemd_service import Service

    daemon = Service("eegstream", "eegstream")
    daemon.create_timer(on_boot_sec=10)

else:
    from openbci.utils import systemd_daemon

    logging.info("Run 'eegstream systemd' as superuser for create the daemon.")
    systemd_daemon.run()

